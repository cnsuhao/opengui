<?xml version="1.0" ?>

<!-- Load Amethyst and a font -->
<OpenGUI>
	<Plugin File="Amethyst" />
	<Font Name="pecot" File="pecot.ttf" />
</OpenGUI>

<!-- Need some imagery. Blue Gui sounds good -->
<Include File="BlueGui.xml" />
<Include File="Generic.xml" />

<!-- Set up some widgets in advance to save time later -->
<OpenGUI>

	<!-- a ready to use cursor -->
	<CursorDef Name="Arrow" BaseName="Generic" BaseLibrary="OpenGUI">
		<Property ValueName="Size" ValueType="FVECTOR2" ValueData="(20x20)" />
		<Property ValueName="Imagery" ValueType="STRING" ValueData="BlueGuiCursorArrow" />
		<Property ValueName="Offset" ValueType="IVECTOR2" ValueData="(0x0)" />
	</CursorDef>

	<!-- an empty label -->
	<WidgetDef Name="Label" BaseName="Label" BaseLibrary="Amethyst">
		<!-- some optional <Property> tags -->
	</WidgetDef>
	
	<!-- a button -->
	<WidgetDef Name="Button" BaseName="SimpleButton" BaseLibrary="Amethyst">
		<Property ValueName="Imagery" ValueType="STRING" ValueData="BlueGuiButtonAltNormal" />
		<Property ValueName="ImageryMouseOver" ValueType="STRING" ValueData="BlueGuiButtonAltHover" />
		<Property ValueName="ImageryPressed" ValueType="STRING" ValueData="BlueGuiButtonAltPress" />
		<Property ValueName="ImageryDisabled" ValueType="STRING" ValueData="BlueGuiButtonAltDisabled" />
	</WidgetDef>


	<!-- a panel'ish looking thing for layout testing fun -->

</OpenGUI>
